{% extends 'header.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset("assets/css/login.css") }}" rel="stylesheet">
{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="formContainer">
        <form action="{{ path('login') }}" method="post">
            <img src="" alt="">
            <a href="">Pas encore de compte ? <span>Inscrivez-vous</span></a>
            <input type="text" id="username" name="_username" value="Email"/><br>
            <input type="password" id="password" name="_password" value="Mot de passe"/><br>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"><br>
            <a href="">Mot de passe oubli√© ?</a>
            {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

            <button type="submit">login</button>
        </form>
    </div>

{% endblock %}
