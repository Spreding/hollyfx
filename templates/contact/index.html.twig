{% extends 'header.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset("assets/css/contact.css") }}" rel="stylesheet">
{% endblock %}
{% block title %}HollyFx - Contact
{% endblock %}

{% block body %}
    <div class="divglobal">
        <div class="ruda divChild">
            <h1 class="divTitle">Autre demande</h1><br>
            <h2 class="">Contactez moi pour discuter ensemble de votre projet et établir un devis.</h2><br>
            {{ form_start(form) }}

            <div class="nameForm">{{ form_row(form.fullName) }}</div>
            <div class="emailForm"> {{ form_row(form.email) }}</div>
            <div class="phoneForm">{{ form_row(form.phoneNumber) }}</div>
            <div class="objectForm">{{ form_row(form.object) }}</div>
            <div class="messageForm">{{ form_row(form.message) }}</div>
            {{ form_row(form.submit) }}
            {{ form_end(form) }}
        </div>
    </div>
    <div class="footer ruda">
        <div>
            <a href="tel:+33648491370">TEL : 06 48 49 13 70</a><br>
            <a href="mailto:contact@hollyfx-makeup.fr">EMAIL : contact@hollyfx-makeup.fr</a>
        </div>
        <div>
            <a href="{{ path("contact") }}">Mentions légales</a>
        </div>
        <div>
            <a href="https://www.instagram.com/hollyfx.makeup/" target="_blank"><i class="iconInsta fab fa-instagram"
                                                                                   aria-hidden="true"></i></a>
        </div>
    </div>

{% endblock %}
